{
  "name": "pipeline-style",
  "version": "1.0.0",
  "description": "pipeline style",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix './packages/**/*.js'",
    "prettier": "prettier --write './packages/**/*'",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dukegod/pipeline-style.git"
  },
  "keywords": [
    "pipeline"
  ],
  "author": "hui",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dukegod/pipeline-style/issues"
  },
  "homepage": "https://github.com/dukegod/pipeline-style#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "git-cz": "^3.3.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^2.0.5",
    "standard": "^14.3.4",
    "standard-version": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint",
      "npm run prettier",
      "git add"
    ],
    "*.{css, less, scss, vue} ": [
      "npm run prettier",
      "git add"
    ]
  }
}
